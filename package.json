{
  "name": "remix-app-template",
  "private": true,
  "description": "A simple app to show NHL games and scores/details",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "run-s -n 'generate:css -- --minify'",
    "build:remix": "remix build",
    "dev": "run-p -n dev:*",
    "dev:css": "run-s -n 'generate:css -- --watch'",
    "dev:remix": "remix dev",
    "generate:css": "tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css",
    "lint": "run-s 'lint:*'",
    "lint:es": "eslint app --max-warnings=0",
    "lint:style": "prettier 'app/**/*.(ts|tsx)' --check",
    "start": "run-s -n dev",
    "test": "TZ=UTC jest --maxWorkers=50%",
    "test:watch": "TZ=UTC jest --watch --maxWorkers=25%",
    "test:ci": "TZ=UTC jest --runInBand",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@remix-run/node": "^1.15.0",
    "@remix-run/react": "^1.15.0",
    "@remix-run/vercel": "^1.15.0",
    "@vercel/node": "^2.6.2",
    "cross-fetch": "^3.1.5",
    "date-fns": "^2.29.3",
    "date-fns-tz": "^2.0.0",
    "isbot": "^3.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@headlessui/react": "^1.7.9",
    "@headlessui/tailwindcss": "^0.1.2",
    "@remix-run/dev": "^1.15.0",
    "@remix-run/eslint-config": "^1.15.0",
    "@remix-run/serve": "^1.15.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^27.4.1",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/parser": "^5.15.0",
    "autoprefixer": "^10.4.4",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "msw": "^0.39.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.0",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "tailwindcss": "^3.0.23",
    "ts-jest": "^27.1.3",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=18"
  },
  "volta": {
    "node": "18.16.0"
  }
}
