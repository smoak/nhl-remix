{
  "name": "nhl-remix",
  "version": "1.0.0",
  "private": true,
  "description": "A simple app to show NHL games and scores/details",
  "type": "module",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "run-s -n 'generate:css -- --minify'",
    "build:remix": "remix vite:build",
    "dev": "run-p -n dev:*",
    "dev:css": "run-s -n 'generate:css -- --watch'",
    "dev:remix": "remix vite:dev",
    "generate:css": "tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css",
    "lint": "run-s 'lint:*'",
    "lint:es": "eslint app --max-warnings=0",
    "lint:style": "prettier 'app/**/*.(ts|tsx)' --check",
    "start": "run-s -n dev",
    "test": "TZ=UTC vitest run --coverage",
    "test:ci": "TZ=UTC vitest run",
    "typecheck": "tsc -b",
    "storybook": "run-p -s 'dev:css' 'storybook:run'",
    "storybook:run": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@brightcove/react-player-loader": "^1.4.2",
    "@remix-run/css-bundle": "^2.1.0",
    "@remix-run/node": "^2.13.1",
    "@remix-run/react": "^2.13.1",
    "@vercel/analytics": "^1.0.2",
    "cross-fetch": "^3.1.5",
    "date-fns": "^2.29.3",
    "date-fns-tz": "^2.0.0",
    "isbot": "^3.6.5",
    "nprogress": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@headlessui/react": "^1.7.9",
    "@headlessui/tailwindcss": "^0.1.2",
    "@remix-run/dev": "^2.13.1",
    "@remix-run/eslint-config": "^2.13.1",
    "@remix-run/testing": "^2.13.1",
    "@storybook/addon-essentials": "^7.5.1",
    "@storybook/addon-interactions": "^7.5.1",
    "@storybook/addon-links": "^7.5.1",
    "@storybook/blocks": "^7.5.1",
    "@storybook/react": "^7.5.1",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^6.3.0",
    "@testing-library/react": "^14.1.2",
    "@types/nprogress": "^0.2.3",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/parser": "^5.15.0",
    "@vitest/coverage-v8": "^1.6.0",
    "autoprefixer": "^10.4.4",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-storybook": "^0.6.15",
    "jsdom": "^25.0.1",
    "msw": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.0",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "storybook": "^7.5.1",
    "tailwindcss": "^3.0.23",
    "typescript": "^5.1.6",
    "vite": "^5.2.11",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18"
  },
  "volta": {
    "node": "20.18.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
