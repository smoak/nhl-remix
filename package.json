{
  "name": "remix-app-template",
  "private": true,
  "description": "A simple app to show NHL games and scores/details",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "run-s generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "run-s generate:css -- --watch",
    "dev:remix": "remix dev",
    "generate:css": "tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css",
    "postinstall": "remix setup node",
    "prettier:check": "prettier --check ."
  },
  "dependencies": {
    "@remix-run/react": "^1.3.1",
    "@remix-run/vercel": "^1.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.3.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.2.3",
    "@remix-run/eslint-config": "^1.3.1",
    "@remix-run/serve": "^1.3.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.4",
    "eslint": "^8.11.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "prettier": "^2.6.0",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  }
}
