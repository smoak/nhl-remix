{
  "name": "remix-app-template",
  "private": true,
  "description": "A simple app to show NHL games and scores/details",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "run-s -n 'generate:css -- --minify'",
    "build:remix": "remix build",
    "dev": "run-p -n dev:*",
    "dev:css": "run-s -n 'generate:css -- --watch'",
    "dev:remix": "remix dev",
    "generate:css": "tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css",
    "postinstall": "remix setup node",
    "lint": "eslint app --max-warnings=0",
    "test": "TZ=UTC jest --maxWorkers=50%",
    "test:watch": "TZ=UTC jest --watch --maxWorkers=25%",
    "test:ci": "TZ=UTC jest --runInBand",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@remix-run/react": "^1.7.4",
    "@remix-run/vercel": "^1.7.4",
    "cross-fetch": "^3.1.5",
    "date-fns": "^2.28.0",
    "date-fns-tz": "^1.3.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.7.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.4",
    "@remix-run/eslint-config": "^1.7.4",
    "@remix-run/serve": "^1.7.4",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/parser": "^5.15.0",
    "autoprefixer": "^10.4.4",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "msw": "^0.39.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "prettier": "^2.6.0",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "tailwindcss": "^3.0.23",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  }
}
